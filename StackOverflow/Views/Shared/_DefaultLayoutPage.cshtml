@using System.Web.Optimization

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Stack Overflow</title>
    @Styles.Render("~/Content/bootstrap")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <a href="#" class="navbar-brand">Stack Overflow</a>
        @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor03">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">Home</a>
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">About</a>
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">Contact</a>
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">Categories</a>
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">Discussions</a>
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">Votes</a>
                </li>
                <li class="nav-item">
                    @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                    <a href="#" class="nav-link">Vote Types</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" action="/home/search">
                <input class="form-control mr-sm-2" type="text" autocomplete="off" name="search" placeholder="Search">
                <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
            </form>
            <ul class="navbar-nav ml-auto">
                @if (Session["CurrentUser"] != null)
                {
                    <li class="nav-item">
                        @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                        <a href="#" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item">
                        @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                        <a href="#" class="nav-link">Register</a>
                    </li>
                }
                else
                {
                    <li class="nav-item dropdown">
                        @*@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })*@
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <img src="~/Images/user-avatar.png" width="25" alt="Avatar Icon"/>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right bg-light">
                            <a class="dropdown-item" href="#">Update Profile</a>
                            <a class="dropdown-item" href="#">Update Password</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#"><span class="text-danger">Log Out</span></a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </nav>
    <div class="container-fluid mt-4">
        @RenderBody()
    </div>
    @Scripts.Render("~/Scripts/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
